<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-black text-white">
    <header class="h-[60px] w-full flex items-center">
        <div class="flex-1 h-full flex items-center justify-start m-6 shadow-lg">
            <p class="text-2xl font-bold"><span class="text-red-600">Shan</span><span class="text-white">kura</span></p>
        </div>
        <div class="w-[300px] h-full flex items-center justify-center m-6 relative">
            <!-- Profile section with dropdown toggle -->
            <div class="flex items-center cursor-pointer space-x-2" id="profileDropdownToggle">
                <img src="https://via.placeholder.com/40" alt="Profile picture" class="rounded-full w-10 h-10">
                <p class="text-sm"><%= username %></p>
                <svg id="arrowIcon" class="w-5 h-5 text-white transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>
            <nav id="profileDropdown" class="absolute top-full right-0 mt-2 w-40 bg-gray-800 rounded-lg shadow-lg transition-opacity duration-200 hidden">
                <a href="/home" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded-t-lg">
                    <span>Home</span>
                </a>
                <a href="/profile" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded-t-lg">
                    <span>View Profile</span>
                </a>
                <a href="/" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded-b-lg">
                    <span>Logout</span>
                </a>
            </nav>
        </div>
    </header>
    <main class="flex-1 w-full flex flex-col items-center mt-4">
        <!-- User Info Section -->
        <section class="w-11/12 md:w-2/3 p-6">
            <div class="space-y-4 text-center">
                <div class="text-lg font-semibold">Username: <%= username %></div>
                <div class="text-sm text-gray-400">Email: <%= email %></div>
            </div>
        </section>

        <!-- Display Messages -->
        <% if (typeof Message !== 'undefined' && Message) { %>
            <div class="w-11/12 md:w-2/3 p-6 bg-red-600 text-white text-center rounded-lg">
                <p><%= Message %></p>
            </div>
        <% } %>

        <!-- Boxes Section (Balance and Go Play) -->
        <section class="w-11/12 md:w-2/3 p-6 flex space-x-4 justify-center">
            <div class="flex-1 bg-gray-800 text-center p-4 rounded-lg">
                <span class="block text-lg font-semibold">Balance</span>
                <span class="block text-2xl font-bold text-red-600"><%= balance %>.00</span>
            </div>
            <div class="flex-1 bg-gray-800 text-center p-4 rounded-lg">
                <span class="block text-lg font-semibold">Back Home</span>
                <button class="mt-2 px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">Go Play</button>
            </div>
        </section>

        <!-- Payment (with Form) -->
        <section class="w-11/12 md:w-2/3 p-6 mt-4">
            <h2 class="text-xl font-bold mb-4">Withdraw Funds</h2>
            <div>
                <button class="w-full bg-gray-800 text-left p-4 rounded-lg focus:outline-none flex justify-between items-center" onclick="toggleSection('paymentForm')">
                    <span>Withdraw</span>
                    <i class="fas fa-chevron-down"></i>
                </button>
                <div id="paymentForm" class="hidden p-4">
                    <form action="/withdraw" method="POST">
                        <div class="mb-2">
                            <label for="withdrawalAmount" class="block">Amount (R1000 minimum):</label>
                            <input type="number" name="amount" id="withdrawalAmount" required min="1000" class="p-2 rounded bg-gray-700 text-white">
                        </div>
                        <div class="mb-2">
                            <label for="bankType" class="block">Bank Name:</label>
                            <input type="text" name="bank" id="bankType" required class="p-2 rounded bg-gray-700 text-white">
                        </div>
                        <div class="mb-2">
                            <label for="bankAccount" class="block">Bank Account:</label>
                            <input type="text" name="account" id="bankAccount" required class="p-2 rounded bg-gray-700 text-white">
                        </div>
                        <input type="hidden" name="email" value="<%= email %>">
                        <button type="submit" class="mt-2 px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">Withdraw</button>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <script>
        function toggleSection(sectionId) {
            const section = document.getElementById(sectionId);
            section.classList.toggle('hidden');
        }
        
        // Dropdown toggle functionality
        const profileDropdownToggle = document.getElementById('profileDropdownToggle');
        const profileDropdown = document.getElementById('profileDropdown');
        const arrowIcon = document.getElementById('arrowIcon');

        profileDropdownToggle.addEventListener('click', function() {
            profileDropdown.classList.toggle('hidden');
            arrowIcon.classList.toggle('rotate-180');
        });
    </script>
</body>
</html>