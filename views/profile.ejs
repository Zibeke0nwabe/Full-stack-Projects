<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-black text-white">
    <header class="h-[60px] w-full flex items-center">
        <div class="flex-1 h-full flex items-center justify-start m-6 shadow-lg">
            <p class="text-2xl font-bold"><span class="text-red-600">Shan</span><span class="text-white">kura</span></p>
        </div>
        <div class="w-[300px] h-full flex items-center justify-center m-6 relative">
            <!-- Profile section with dropdown toggle -->
            <div class="flex items-center cursor-pointer space-x-2" id="profileDropdownToggle">
                <img src="https://via.placeholder.com/40" alt="Profile picture of <%= username %>" class="rounded-full w-10 h-10">
                <p class="text-sm"><%= username %></p>
                <!-- Arrow indicator for dropdown -->
                <svg id="arrowIcon" class="w-5 h-5 text-white transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
            </div>
            <!-- Dropdown menu (hidden by default) -->
            <nav id="profileDropdown" class="absolute top-full right-0 mt-2 w-40 bg-gray-800 rounded-lg shadow-lg transition-opacity duration-200 hidden">
                <a href="/home" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded-t-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A3.375 3.375 0 008 20.25h8a3.375 3.375 0 002.879-2.446M15.75 11.625A3.75 3.75 0 1112 7.875a3.75 3.75 0 013.75 3.75zm0 0V20.25"></path>
                    </svg>
                    <span>Home</span>
                </a>
                <a href="/profile" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded-t-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A3.375 3.375 0 008 20.25h8a3.375 3.375 0 002.879-2.446M15.75 11.625A3.75 3.75 0 1112 7.875a3.75 3.75 0 013.75 3.75zm0 0V20.25"></path>
                    </svg>
                    <span>View Profile</span>
                </a>
                <a href="/" class="flex items-center space-x-2 p-2 hover:bg-gray-700 rounded-b-lg">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 0a6 6 0 11-12 0 6 6 0 0112 0z"></path>
                    </svg>
                    <span>Logout</span>
                </a>
            </nav>
        </div>
    </header>
    <main class="flex-1 w-full flex flex-col items-center mt-4">
        <!-- User Info Section -->
        <section class="w-11/12 md:w-2/3 p-6">
            <div class="space-y-4 text-center">
                <div class="text-lg font-semibold">Username: <%= username %></div>
                <div class="text-sm text-gray-400">Email: <%= email %></div>
            </div>
        </section>

        <!-- Boxes Section (Balance and Go Play) -->
        <section class="w-11/12 md:w-2/3 p-6 flex space-x-4 justify-center">
            <div class="flex-1 bg-gray-800 text-center p-4 rounded-lg">
                <span class="block text-lg font-semibold">Balance</span>
                <span class="block text-2xl font-bold text-red-600"><%= balance%>.00</span>
            </div>
            <div class="flex-1 bg-gray-800 text-center p-4 rounded-lg">
                <span class="block text-lg font-semibold">Back Home</span>
                <button class="mt-2 px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">Go Play</button>
            </div>
        </section>

        <!-- FAQ-style Design -->
        <section class="w-11/12 md:w-2/3 p-6 mt-4">
            <h2 class="text-xl font-bold mb-4">User Actions</h2>
            <div class="space-y-2">
                <!-- User Information -->
                <div>
                    <button class="w-full bg-gray-800 text-left p-4 rounded-lg focus:outline-none flex justify-between items-center" onclick="toggleSection('userInfo')">
                        <span>User Information</span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <div id="userInfo" class="hidden p-4">
                        <p>Your name: Zibeke</p>
                        <p>Email: zibeke@gmail.com</p>
                    </div>
                </div>

                <!-- Your Games -->
                <div>
                    <button class="w-full bg-gray-800 text-left p-4 rounded-lg focus:outline-none flex justify-between items-center" onclick="toggleSection('yourGames')">
                        <span>Your Games</span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <div id="yourGames" class="hidden p-4">
                        <p>Game 1: Adventure World</p>
                        <p>Game 2: Puzzle Quest</p>
                    </div>
                </div>

                <!-- Payment (with Form) -->
                <div>
                    <button class="w-full bg-gray-800 text-left p-4 rounded-lg focus:outline-none flex justify-between items-center" onclick="toggleSection('paymentForm')">
                        <span>Payment</span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <div id="paymentForm" class="hidden p-4">
                        <form action="/withdraw" method="POST">
                            <div>
                                <label for="withdrawalAmount">Amount:</label>
                                <input type="number" name="amount" id="withdrawalAmount" required>
                            </div>
                            <div>
                                <label for="bankType">Bank Name:</label>
                                <input type="text" name="bank" id="bankType" required>
                            </div>
                            <div>
                                <label for="bankAccount">Bank Account:</label>
                                <input type="text" name="account" id="bankAccount" required>
                            </div>
                            <button type="submit">Withdraw</button>
                        </form>
                        
                    </div>
                </div>

                <!-- Recommended Games -->
                <div>
                    <button class="w-full bg-gray-800 text-left p-4 rounded-lg focus:outline-none flex justify-between items-center" onclick="toggleSection('recommendedGames')">
                        <span>Recommended Games</span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    <div id="recommendedGames" class="hidden p-4">
                        <p>Game 1: Super Racing</p>
                        <p>Game 2: Star Battle</p>
                    </div>
                </div>

                <!-- Logout -->
                <div>
                    <a href="/">
                    <button class="w-full bg-gray-800 text-left p-4 rounded-lg focus:outline-none flex justify-between items-center">
                        <span>Logout</span>
                        <i class="fas fa-sign-out-alt"></i>
                    </button>
                    </a>
                </div>
            </div>
        </section>
    </main>

    <script>
        function toggleSection(sectionId) {
            const section = document.getElementById(sectionId);
            section.classList.toggle('hidden');
        }
    // Dropdown toggle functionality
    const profileDropdownToggle = document.getElementById('profileDropdownToggle');
    const profileDropdown = document.getElementById('profileDropdown');
    const arrowIcon = document.getElementById('arrowIcon');

    profileDropdownToggle.addEventListener('click', function() {
    profileDropdown.classList.toggle('hidden');
    arrowIcon.classList.toggle('rotate-180');
    });
    </script>
</body>
</html>