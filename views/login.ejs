<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="google-adsense-account" content="ca-pub-5605794258432532">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap');
    body {
      font-family: 'Poppins', sans-serif;
      height: 100vh; /* Full height */
      margin: 0; /* Remove default margin */
    }

    .curve-bg {
      background-color: black; /* Shankura's Black */
      border-bottom-left-radius: 50% 20%;
      border-bottom-right-radius: 50% 20%;
    }
  </style>
</head>

<body class="bg-white flex flex-col">
  <!-- Curved Top Section -->
  <div class="curve-bg w-full h-1/3 flex items-center justify-center">
    <h1 class="text-4xl font-bold text-red-600">Welcome Back</h1>
  </div>

  <!-- Login Form -->
  <div class="flex flex-grow justify-center items-center">
    <div class="w-full max-w-md">
      <form action="/login" method="POST" class="bg-white p-8 shadow-lg rounded-lg">
        <p class="text-red-600 <%= errorMessage ? '' : 'hidden' %>"><%= errorMessage %></p> <!-- Error message here -->
        <div class="space-y-6">
          <input class="w-full border border-gray-300 p-3 rounded-md" type="email" name="email" placeholder="Email" required>
          <input class="w-full border border-gray-300 p-3 rounded-md" type="password" name="password" placeholder="Password" required>
        </div>

        <div class="text-right mt-2">
          <a href="/forgot-password" class="text-sm text-red-600">Forgot your password?</a>
        </div>

        <button type="submit" class="w-full bg-red-600 text-white py-3 rounded-md font-bold mt-6 hover:bg-red-700">Log in</button>
      </form>

      <!-- Navigation to Register -->
      <p class="text-center text-gray-600 mt-6">
        Don't have an account?
        <a href="/register" class="text-red-600">Sign up</a>
      </p>
    </div>
  </div>
</body>
</html>