<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="google-adsense-account" content="ca-pub-5605794258432532">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shankura Quiz</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background-color: #1a1a1a; /* Dark background */
            color: #ffffff; /* White text */
        }
    </style>
</head>
<body class="p-6 bg-gray-800">
    <nav class="">
        <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
            <div class="relative flex h-16 items-center justify-between">
                <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                    <button id="menu-button" type="button" class="relative inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
                        <span class="absolute -inset-0.5"></span>
                        <span class="sr-only">Open main menu</span>
                        <div class="flex items-center">
                            <svg id="menu-icon" class="block h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                            </svg>
                            <svg id="close-icon" class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                            </svg>
                        </div>
                    </button>
                    <p><span class='text-red-600'>Shan</span>kura</p>
                </div>
                <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
                    <div class="flex flex-shrink-0 items-center">
                        <p class="lg:text-4xl font-bold hidden sm:block"><span class='text-red-600'>Shan</span>kura</p>
                        <div class="hidden sm:flex space-x-4 ml-4">
                            <a href="/home" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3  rounded-md text-sm font-medium">Home</a>
                            <a href="/profile" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 rounded-md text-sm font-medium">Profile</a>
                            <a href="/" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 rounded-md text-sm font-medium">Logout</a>
                        </div>
                    </div>
                </div>
                <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
                    <div class="relative flex items-center">
                        <button type="button" class="relative flex rounded-full bg-gray-800 text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                            <span class="absolute -inset-1.5"></span>
                            <span class="sr-only">Open user menu</span>
                            <img class="h-8 w-8 rounded-full" src="https://th.bing.com/th/id/R.19fa7497013a87bd77f7adb96beaf768?rik=144XvMigWWj2bw&riu=http%3a%2f%2fwww.pngall.com%2fwp-content%2fuploads%2f5%2fUser-Profile-PNG-High-Quality-Image.png&ehk=%2bat%2brmqQuJrWL609bAlrUPYgzj%2b%2f7L1ErXRTN6ZyxR0%3d&risl=&pid=ImgRaw&r=0" alt="">
                        </button>
                        <span class="sm:text-white text-sm ml-2"><%= username %></span>
                    </div>
                </div>
            </div>
        </div>
        <!-- Mobile Menu -->
        <div class="sm:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="/home" class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Home</a>
                <a href="/profile" class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Profile</a>
                <a href="/" class="text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium">Logout</a>
            </div>
        </div>
    </nav>
    
    <main class="mt-8 flex flex-col md:flex-row">
        <div class="w-full md:w-1/4 bg-gray-700 p-4 rounded-lg shadow-lg mr-4">
            <h3 class="text-xl text-center mb-4">Advertisment</h3>
            <ins class="adsbygoogle"
                 style="display:block; width:100%; height:250px;"
                 data-ad-client="ca-pub-5605794258432532"
                 data-ad-slot="9266258800"></ins>
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5605794258432532"
                    crossorigin="anonymous"></script>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>

        <div class="w-full md:w-1/2 bg-gray-800 p-4 rounded-lg shadow-lg">
            <h2 class="lg:text-3xl sm:text-xl text-center mb-4"><%= question.question %></h2>
            <form id="quiz-form" class="mb-4">
                <% question.options.forEach(option => { %>
                    <div class="mb-2">
                        <label class="flex items-center">
                            <input type="radio" name="answer" value="<%= option %>" class="mr-2"> <%= option %>
                        </label>
                    </div>
                <% }); %>
                <div class="text-center">
                    <button type="submit" class="bg-red-600 hover:bg-red-100 text-gray-800 font-semibold py-1 px-6 rounded shadow">Next</button>
                </div>
            </form>
            <div class="text-center">
                <a href="/home" class="text-blue-400">Quit</a>
            </div>
        </div>

        <div class="w-full md:w-1/4 bg-gray-700 p-4 rounded-lg shadow-lg ml-4">
            <h3 class="text-xl text-center mb-4">Advertisment</h3>
            <ins class="adsbygoogle"
                 style="display:block; width:100%; height:250px;"
                 data-ad-client="ca-pub-5605794258432532"
                 data-ad-slot="9266258800"></ins>
            <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </main>

    <div id="ads" class="mt-6 text-center hidden">
        <h3 class="text-xl mb-4">Watch this ad!</h3>
        <div id="adContainerAbove" class="mb-4">
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-format="autorelaxed"
                 data-ad-client="ca-pub-5605794258432532"
                 data-ad-slot="9266258800"></ins>
        </div>
        <div id="adContainerBelow" class="mb-4">
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-format="autorelaxed"
                 data-ad-client="ca-pub-5605794258432532"
                 data-ad-slot="9266258800"></ins>
        </div>
    </div>

    <script>
        // Menu toggle functionality
        const menuButton = document.getElementById('menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = document.getElementById('menu-icon');
        const closeIcon = document.getElementById('close-icon');

        menuButton.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
            menuIcon.classList.toggle('hidden');
            closeIcon.classList.toggle('hidden');
        });

        const form = document.getElementById('quiz-form');
        const adsDiv = document.getElementById('ads');

        form.addEventListener('submit', function(event) {
            event.preventDefault();
            const formData = new FormData(this);

            fetch('/quiz/answer', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.nextQuestion) {
                    adsDiv.classList.remove('hidden'); // Show ads
                    showAds(); // Function to handle ad display
                } else {
                    alert('Quiz completed!');
                }
            });
        });

        function showAds() {
            document.getElementById('adContainerAbove').style.display = 'block';
            document.getElementById('adContainerBelow').style.display = 'block';

            setTimeout(() => {
                document.getElementById('adContainerAbove').style.display = 'none';
                document.getElementById('adContainerBelow').style.display = 'none';
                loadNextQuestion(); // Function to load the next question and update balance
            }, 90000); // Display ads for 90 seconds total
        }

        function loadNextQuestion() {
            fetch('/quiz/update-balance', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ amount: 1 }) // Add R 1
            })
            .then(response => response.json())
            .then(data => {
                window.location.reload(); // Reloads to fetch the next question
            });
        }
    </script>
</body>
</html>
